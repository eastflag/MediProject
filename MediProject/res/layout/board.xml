<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp" >
    
    
        
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
        android:padding="10dp">
        <Button 
            android:id="@+id/btnWrite" android:layout_width="60dp" android:layout_height="35dp" 
    	    android:background="@drawable/color_red" android:text="글쓰기"
            android:textColor="#ffffff" android:gravity="center" android:textSize="14dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivUserImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ab_solid_typing" />

</LinearLayout>
